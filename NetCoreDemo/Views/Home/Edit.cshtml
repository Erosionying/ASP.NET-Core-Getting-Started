@model NetCoreDemo.Models.Cinema

<div class="container">
    <form asp-action="Edit">
        <input type="hidden" asp-for="@Model.Id"/>
        <div class="form-group">
            <label asp-for="@Model.Name"></label>
            <input type="text" class="form-control" asp-for="@Model.Name" />
        </div>
        <div class="form-group">
            <label asp-for="@Model.Location"></label>
            <input type="text" class="form-control" asp-for="@Model.Location" />
        </div>
        <div class="form-group">
            <label asp-for="@Model.Capacity"></label>
            <input type="number" class="form-control" asp-for="@Model.Capacity" />
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>