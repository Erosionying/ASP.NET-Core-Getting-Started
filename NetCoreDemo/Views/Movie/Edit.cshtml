@model NetCoreDemo.Models.Movie

<div class="container">
    <form asp-action="Edit">
        <input type="hidden" asp-for="@Model.Id"/>
        <input type="hidden" asp-for="@Model.CinemaId" />
        <div class="form-group">
            <label asp-for="@Model.Name"></label>
            <input type="text" class="form-control" asp-for="@Model.Name" />
        </div>
        <div class="form-group">
            <label asp-for="@Model.Starring"></label>
            <input type="text" class="form-control" asp-for="@Model.Starring" />
        </div>
        <div class="form-group">
            <label asp-for="@Model.ReleaseDate"></label>
            <input type="date" class="form-control" asp-for="@Model.ReleaseDate" />
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>

